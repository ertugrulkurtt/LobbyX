# Firebase Configuration (for data only, not storage)
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your_firebase_auth_domain
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_DATABASE_URL=your_firebase_database_url

# Cloudflare R2 Configuration (for file storage)
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_R2_ACCESS_KEY_ID=your_r2_access_key_id
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
CLOUDFLARE_R2_BUCKET_NAME=lobbyxserver
CLOUDFLARE_R2_ENDPOINT=https://your_account_id.r2.cloudflarestorage.com
CLOUDFLARE_R2_PUBLIC_DOMAIN=https://cdn.lobbyx.com

# Vite environment variables (client-side)
VITE_CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
VITE_CLOUDFLARE_R2_ACCESS_KEY_ID=your_r2_access_key_id
VITE_CLOUDFLARE_R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
VITE_CLOUDFLARE_R2_BUCKET_NAME=lobbyxserver
VITE_CLOUDFLARE_R2_PUBLIC_DOMAIN=https://cdn.lobbyx.com

# Server Configuration
PORT=8080
NODE_ENV=development

# Optional: API Rate limiting
UPLOAD_RATE_LIMIT=10
UPLOAD_RATE_WINDOW=60000
