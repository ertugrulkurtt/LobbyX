rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper Functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // ================================================================
    // SIMPLIFIED RULES FOR DEVELOPMENT
    // All authenticated users can read/write their own data
    // ================================================================
    
    // User profiles
    match /users/{userId} {
      allow read, write: if isAuthenticated();
    }

    // User presence
    match /presence/{userId} {
      allow read, write: if isAuthenticated();
    }

    // Friendships
    match /friendships/{friendshipId} {
      allow read, write: if isAuthenticated();
    }

    // Friend requests
    match /friendRequests/{requestId} {
      allow read, write: if isAuthenticated();
    }

    // Conversations
    match /conversations/{conversationId} {
      allow read, write: if isAuthenticated();
    }

    // Messages
    match /conversations/{conversationId}/messages/{messageId} {
      allow read, write: if isAuthenticated();
    }

    // Calls
    match /calls/{callId} {
      allow read, write: if isAuthenticated();
    }

    // Groups
    match /groups/{groupId} {
      allow read, write: if isAuthenticated();
    }

    // Notifications
    match /notifications/{notificationId} {
      allow read, write: if isAuthenticated();
    }

    // User settings
    match /userSettings/{userId} {
      allow read, write: if isAuthenticated();
    }

    // File metadata
    match /fileMetadata/{fileId} {
      allow read, write: if isAuthenticated();
    }

    // User statistics
    match /userStats/{userId} {
      allow read, write: if isAuthenticated();
    }

    // Daily activity
    match /dailyActivity/{activityId} {
      allow read, write: if isAuthenticated();
    }

    // XP logs
    match /xpLogs/{logId} {
      allow read, write: if isAuthenticated();
    }

    // Message statistics
    match /messageStats/{statsId} {
      allow read, write: if isAuthenticated();
    }

    // Security logs - server only
    match /securityLogs/{logId} {
      allow read, write: if false;
    }

    // Admin collection - server only
    match /admin/{document=**} {
      allow read, write: if false;
    }

    // Default deny rule
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
