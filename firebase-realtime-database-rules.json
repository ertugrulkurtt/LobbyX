{
  "rules": {
    ".read": false,
    ".write": false,
    "calls": {
      "incoming": {
        "$userId": {
          ".read": "$userId == auth.uid",
          ".write": "auth != null"
        }
      },
      "outgoing": {
        "$userId": {
          ".read": "$userId == auth.uid", 
          ".write": "$userId == auth.uid"
        }
      },
      "status": {
        "$userId": {
          ".read": "$userId == auth.uid",
          ".write": "auth != null"
        }
      }
    }
  }
}